<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_input_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:layout_width="416dp"
        android:layout_height="513dp"
        android:layout_marginTop="60dp"
        android:background="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-3dp">

        <TextView
            android:id="@+id/card_input_text_view"
            android:layout_width="214dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text=""/>

        <EditText
            android:id="@+id/head_input_box"
            android:layout_width="250dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/card_input_text_view"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="80dp" />

        <EditText
            android:id="@+id/tail_input_box"
            android:layout_width="250dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/head_input_box"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="240dp" />

        <LinearLayout
            android:layout_width="218dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/tail_input_box"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="450dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/card_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/card_input_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>